<Window x:Class="FileAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Files" Margin="5"/>
            <ListBox Height="300" Margin="5" ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedFile}"/>
            <Button Height="40" Margin="5" Content="Analize" FontSize="20" Command="{Binding AnalyzeCommand}"/>
        </StackPanel>

        <StackPanel Margin="10">
            <ProgressBar x:Name="pgb" Height="30" Margin="20" Value="{Binding ProgressbarValue}" Maximum="100"/>
            <Button Height="30" Width="80" Margin="0 0 20 0" HorizontalAlignment="Right" Content="Cancel"/>
            <ListView x:Name="InfoxListBox" Height="260" Margin="20" ItemsSource="{Binding Infos}" FontSize="15"/>

        </StackPanel>
    </Grid>
</Window>
