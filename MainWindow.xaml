<Window x:Class="FileAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileAnalyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Files" Margin="5"/>
            <ListBox Height="300" Margin="5">
                <!--SelectedItem-->
            </ListBox>
            <Button Height="40" Margin="5" Content="Analize" FontSize="20"/>
        </StackPanel>

        <StackPanel Margin="10">
            <StatusBar Height="30" Margin="20"/>
            <Button Height="30" Width="80" Margin="0 0 20 0" HorizontalAlignment="Right" Content="Cancel"/>
            <TextBlock Height="200" Margin="20">
        <!--Something-->
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
